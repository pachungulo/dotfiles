theme = catppuccin-mocha
font-family = "CommitMono"
font-feature = "ss01"
font-feature = "ss02"
font-feature = "ss03"
font-feature = "ss04"
font-feature = "ss05"
font-feature = "cv10"
{{ if eq .chezmoi.os "darwin" -}}
window-height = 54
window-width = 183
background-opacity = 0.8
background-blur-radius = 20
{{ else -}}
{{ end -}}

keybind = ctrl+s>equal=equalize_splits

keybind = ctrl+s>h=goto_split:left
keybind = ctrl+s>j=goto_split:bottom
keybind = ctrl+s>k=goto_split:top
keybind = ctrl+s>l=goto_split:right

keybind = ctrl+s>s=new_split:down
keybind = ctrl+s>v=new_split:right
keybind = ctrl+s>f=toggle_split_zoom

keybind = ctrl+s>p=previous_tab
keybind = ctrl+s>n=next_tab
keybind = ctrl+s>c=new_tab
keybind = ctrl+s>ctrl+p=previous_tab
keybind = ctrl+s>ctrl+n=next_tab
keybind = ctrl+s>q=close_surface

keybind = ctrl+s>1=goto_tab:1
keybind = ctrl+s>2=goto_tab:2
keybind = ctrl+s>3=goto_tab:3
keybind = ctrl+s>4=goto_tab:4
keybind = ctrl+s>5=goto_tab:5
keybind = ctrl+s>6=goto_tab:6
keybind = ctrl+s>7=goto_tab:7
keybind = ctrl+s>8=goto_tab:8
keybind = ctrl+s>9=goto_tab:9
